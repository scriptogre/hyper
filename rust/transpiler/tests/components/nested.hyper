title: str
items: list

---

# Nested components
<{Card}>
    <{CardHeader}>
        <h2>{title}</h2>
    </{CardHeader}>
    <{CardBody}>
        <{List}>
            for item in items:
                <{ListItem}>
                    {item}
                </{ListItem}>
            end
        </{List}>
    </{CardBody}>
</{Card}>

# Component in control flow
if title:
    <{Alert} type="info">
        <span>{title}</span>
    </{Alert}>
end

# Components in loop
for item in items:
    <{Badge} color="blue">
        {item}
    </{Badge}>
end
