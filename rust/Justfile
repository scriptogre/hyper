# Default to building all crates
default: build

# Build all crates
build:
    cargo build --release

# Build the CLI only
cli:
    cargo build --release -p hyper-transpiler

# Build the Python bindings
python:
    cd python && maturin develop --release

# Run tests
test:
    cargo test

# Clean build artifacts
clean:
    cargo clean

# Check code without building
check:
    cargo check

# Format code
fmt:
    cargo fmt

# Run clippy lints
lint:
    cargo clippy -- -D warnings

# Install the CLI to ~/.cargo/bin
install:
    cargo install --path transpiler